<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_donate"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TextView
            android:id="@+id/tv_donate_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="如果您能够捐赠我，我将非常感谢!!!"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/relative_donate_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_donate_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:src="@drawable/icons8_euro_money_24"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_donate_low"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/text_margin"
            android:text="1 Euro"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_donate_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捐赠" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relative_donate_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_donate_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:src="@drawable/icons8_euro_money_24"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_donate_low"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/text_margin"
            android:text="2 Euro"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_donate_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捐赠" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

