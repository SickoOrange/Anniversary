<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.berber.orange.memories.activity.AddItemActivity">

    <!--<android.support.design.widget.AppBarLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:theme="@style/AppTheme.AppBarOverlay">-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <!--</android.support.design.widget.AppBarLayout>-->

    <!--<include layout="@layout/content_add" />-->

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@android:color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_category_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="KTV" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/anniversary_type_vp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anniversary_type_vp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="2017年10月15日"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:drawableStart="@drawable/ic_date_range_black_18dp"
            android:drawableLeft="@drawable/ic_date_range_black_18dp" />

        <TextView
            android:id="@+id/time_value_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:text="23:00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_layout"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/location_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="请选择地点"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:drawableStart="@drawable/ic_place_black_18dp"
            android:drawableLeft="@drawable/ic_place_black_18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:gravity="end"
            android:background="@drawable/item_ripple"
            android:text="X" />

    </LinearLayout>


    <EditText
        android:layout_below="@id/location_layout"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:id="@+id/add_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@drawable/edit_bg"
        android:padding="5dp"
        android:hint="请输入详细的描述...."
        >
    </EditText>


</RelativeLayout>
