<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/item_ripple"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="MissingPrefix">

    <com.berber.orange.memories.widget.TimeLineMarker
        android:id="@+id/item_time_line_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="18dp"
        app:beginLine="#E0E0E0"
        app:endLine="#E0E0E0"
        app:lineSize="2dp"
        app:marker="@drawable/ic_timeline_marker"
        app:markerSize="12dp" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/item_time_line_view"
        android:layout_toRightOf="@+id/item_time_line_view"
        android:src="@drawable/if_donut_2138185" />


    <TextView
        android:id="@+id/item_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot_text_view"
        android:padding="10dp"
        android:text="23/04/1995"
        android:textColor="#90000000"
        android:layout_below="@+id/item_time_line_txt"
        android:layout_alignLeft="@+id/item_time_line_txt"
        android:layout_alignStart="@+id/item_time_line_txt" />

    <!--<TextView-->
    <!--android:id="@+id/textView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/item_date_textview"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:layout_toEndOf="@+id/item_time_line_view"-->
    <!--android:layout_toRightOf="@+id/item_time_line_view"-->
    <!--android:background="@drawable/dot_text_view"-->
    <!--android:padding="10dp"-->
    <!--android:text="+ 130 Days" />-->

    <TextView
        android:id="@+id/item_time_line_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="5dp"
        android:text="今天是老婆的生日"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_date_textview"
        android:layout_alignStart="@+id/item_date_textview"
        android:layout_below="@+id/item_date_textview"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite_border_white_24px"
            android:tint="#E0E0E0" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_access_alarms_white_24px"
            android:tint="#E0E0E0" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_share"
            android:tint="#E0E0E0" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/icon" />


</RelativeLayout>