<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/item_ripple"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/dot_text_view"
        android:padding="9dp"
        android:text="Apr 23"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <com.berber.orange.memories.widget.TimeLineMarker
        android:id="@+id/item_time_line_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:paddingBottom="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="48dp"
        app:beginLine="#E0E0E0"
        app:endLine="#E0E0E0"
        app:lineSize="2dp"
        app:marker="@drawable/ic_timeline_marker"
        app:markerSize="12dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/item_time_line_view"
        android:layout_toRightOf="@+id/item_time_line_view"
        android:background="@drawable/item_bg_view"
        android:padding="10dp">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/circleImageView"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:src="@drawable/icon" />-->

        <TextView
            android:id="@+id/item_time_line_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="今天是老婆的生日"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_time_line_txt"
            android:src="@drawable/ic_favorite_white_18dp"
            android:layout_marginLeft="3dp"
            android:tint="@color/colorGray" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_time_line_txt"
            android:layout_toRightOf="@+id/favorite"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_access_alarm_white_18dp"
            android:tint="@color/colorGray" />



        <TextView
            android:id="@+id/place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_time_line_txt"
            android:layout_toRightOf="@id/clock"
            android:drawableLeft="@drawable/ic_place_black_18dp"
            android:drawableTint="#616161"
            android:layout_marginLeft="5dp"
            android:gravity="center"
           android:padding="1dp"
            android:text="伦敦"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/left_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clock"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/dot_text_view_left_day"
            android:gravity="center"
            android:padding="2dp"
            android:text="+ 365"
            android:textColor="@android:color/white"
            android:textSize="10sp" />


    </RelativeLayout>


</RelativeLayout>