<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/item_ripple"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/dot_text_view"
        android:padding="9dp"
        android:text="Apr 23"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <com.berber.orange.memories.widget.TimeLineMarker
        android:id="@+id/item_time_line_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:paddingBottom="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="48dp"
        app:beginLine="#E0E0E0"
        app:endLine="#E0E0E0"
        app:lineSize="2dp"
        app:marker="@drawable/ic_timeline_marker"
        app:markerSize="12dp" />


    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_time_line_view"
        android:layout_toRightOf="@+id/item_time_line_view"
        android:background="@drawable/item_bg_view"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/item_time_line_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:text="今天是老婆的生日"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_time_line_txt"
            android:layout_alignStart="@+id/item_time_line_txt"
            android:layout_below="@+id/item_time_line_txt"
            android:drawableLeft="@drawable/ic_place_black_18dp"
            android:drawableTint="#616161"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="英国 伦敦"
            android:textColor="#757575"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/left_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/place_label"
            android:layout_alignStart="@+id/place_label"
            android:layout_below="@+id/circleImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/dot_text_view_left_day"
            android:gravity="center"
            android:padding="2dp"
            android:text="+ 365"
            android:textColor="@android:color/white"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_day_label"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/left_day_label"
            android:layout_toRightOf="@+id/left_day_label"
            android:src="@drawable/ic_favorite_white_18dp"
            android:tint="@color/colorGray" />

        <!--<ImageView-->
        <!--android:id="@+id/share"-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--android:layout_marginStart="12dp"-->
        <!--android:src="@drawable/ic_menu_share"-->
        <!--android:tint="#FF4081" />-->

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_day_label"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/favorite"
            android:layout_toRightOf="@+id/favorite"
            android:src="@drawable/ic_access_alarm_white_18dp"
            android:tint="@color/colorGray"

            />


    </RelativeLayout>


</RelativeLayout>